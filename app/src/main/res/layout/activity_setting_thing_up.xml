<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".ui.others.SettingThingUpActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/settingThingsUpAct_loading_progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart"
        app:lottie_speed="1.0"
        tools:lottie_rawRes="@raw/loading" />

    <TextView
        android:id="@+id/settingThingsUpAct_onGoingTask_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingThingsUpAct_loading_progressBar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_regular"
        android:text="Loading your resources...."
        android:textColor="@color/gray_300"
        android:textSize="16sp" />

</RelativeLayout>